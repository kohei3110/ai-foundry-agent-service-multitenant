# Application Settings
APP_NAME="Pooled Agent Service"
DEBUG=false
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Settings (comma-separated list)
CORS_ORIGINS=*

# Azure Blob Storage Settings
# Option 1: Connection String (recommended for development)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=youraccountkey;EndpointSuffix=core.windows.net

# Option 2: Account Name and Key
AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount
AZURE_STORAGE_ACCOUNT_KEY=youraccountkey

# Option 3: Account Name only (uses DefaultAzureCredential for production)
# AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount

# Default container name
AZURE_STORAGE_CONTAINER_NAME=documents
